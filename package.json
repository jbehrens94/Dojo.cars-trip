{
  "name": "cars-trip",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "ci.production": "npm ci --only:production",
    "build": "tsc",
    "start.dev": "npx ts-node src/index.ts",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "watch": "tsc --watch",
    "test": "jest --watchAll --color --coverage --verbose",
    "test:ci": "jest --color --coverage --verbose",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "lint:fix": "eslint . --ext .ts --fix",
    "build-image": "docker build -t cars-trip . --progress=plain",
    "run-image": "docker run -d -p 3000:3000 cars-trip",
    "smoketest": "curl http://127.0.0.1:3000/health",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --max-warnings 0 ."
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.14.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@usebruno/cli": "^2.8.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.4",
    "prettier": "^3.3.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0"
  },
  "dependencies": {
    "express": "^5.1.0"
  }
}
